<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.afoxtutorials.filemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="Settings"
            android:parentActivityName=".RootActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".AboutApp"
            android:label="Report Bug"
            android:parentActivityName=".RootActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".Updater"
            android:label="Update"
            android:parentActivityName=".RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".TextEditor"
            android:label="Edit Text"
            android:parentActivityName=".RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".MusicPlayer"
            android:label="Music Player"
            android:parentActivityName=".RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
    </application>

</manifest>